<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BeSpoked Bikes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<style>
    #purchase-button {
        background-color: white;
        color:#333333;
        padding:5px;
        margin-top:10px;
    }
    @@media (max-width: 767px) {
        #purchase-button {
            float: left !important;
            margin:0 15px;
        }
    }
    .branded {
        background: url(/Content/img/background2.jpg) no-repeat;
        background-size: cover;
    }
    .navbar-inverse{
        background-color:none;
        border-color:none;
    }
    .body-content {
        background-color: rgba(255,255,255,0.9);
        border-radius:5px;
        padding-bottom:15px;
    }
</style>
</head>
<body class="branded">
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BeSpoked Bikes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("Salespersons", "Index", "SalesPerson")</li>
                    <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                    <li>@Html.ActionLink("Sales", "Index", "Sales")</li>
                    <li>@Html.ActionLink("Quarerly Bonus", "QuarterlyCommission", "Sales")</li>
                </ul>
                @*<ul class="nav navbar-nav navbar-right">
                    <li><a class="btn pull-right" id="purchase-button" href="/SalesPerson">Purchase Bike</a></li>
                </ul>*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BeSpoked Bikes</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
